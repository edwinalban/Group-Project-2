<h2>Sign Up!</h2>

<form id="signup-form" class="form login-form">
  <div class="form-group">
    <label for="email-login">Enter Email:</label>
    <input class="form-input" type="text" id="email-login" name="email-login" />
  </div>
  <div class="form-group">
    <label for="password-login">Create Password:</label>
    <input class="form-input" type="password" id="password-login" name="password-login" />
  </div>
    <div class="form-group">
    <label for="confirm-password-login">Confirm Password:</label>
    <input class="form-input" type="password" id="confirm-password-login" name="confirm-password-login" />
  </div>
  <div class="form-group">
    <button id="signup-submit" class="btn btn-primary" type="submit">Submit</button>
  </div>
</form>
<script src="/js/signup.js"></script>